<project name="FreePastryTest" default="exec" basedir=".">

    <property name="test.jar" value="${basedir}/target/FreePastryTest-1.0-SNAPSHOT.jar"/>
    <property name="testcase.class" value="fr.inria.peerunit.freepastrytest.test.RoutingTableTest"/>
    <property name="tester.class" value="fr.inria.peerunit.TestRunner"/>
    <property name="coordinator.class" value="fr.inria.peerunit.CoordinatorRunner"/>

    <path id="exec.classpath">
        <pathelement path="${test.jar}" />
    </path>

    <target name="exec">
        <parallel>
			<!--
            <java classname="fr.inria.peerunit.freepastrytest.Bootstrap" classpathref="exec.classpath" fork="true"/>
			-->
            <java classname="fr.inria.peerunit.CoordinatorRunner" classpathref="exec.classpath" fork="true"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
            <antcall  target="tester.execute"/>
        </parallel>
    </target>

    <target name="tester.execute">
        <java classname="${tester.class}" classpathref="exec.classpath" fork="true">
            <arg value="${testcase.class}"/>
            <assertions>
                <enable/>
            </assertions>
        </java>
    </target>

    <target name="clear">
        <delete verbose="true" includeemptydirs="true">
            <dirset dir="${basedir}">
                <include name="*storage*"/>
            </dirset>
            <fileset dir="." includes="**/*.log"/>
        </delete>
    </target>


</project>
